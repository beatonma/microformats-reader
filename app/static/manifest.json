{
    "manifest_version": 3,
    "name": "DEV Microformats Reader",
    "version": "1.0",

    "description": "Displays microformat data from the active page",

    "author": "Michael Beaton",

    "icons": {

    },
    
    "default_locale": "en",

    "permissions": [
        "tabs",
        "storage"
    ],
    "web_accessible_resources": [

    ],

    "action": {
        "default_popup": "popup.html"
    },

    "options_page": "options.html",
    "options_ui": {
        "page": "options.html"
    },

    "background": {
        "service_worker": "service-worker.js"
    },

    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "all_frames": true,
            "js": [
                "lib/microformat-shiv.js",
                "content-script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "homepage_url": "https://beatonma.org/app/browser-microformats-reader/"
}
