{
  "name": "microformats",
  "version": "1.0.0",
  "description": "Reader for microformat-compliant content",
  "scripts": {
    "dev": "webpack --watch --config webpack.dev.js --env DEBUG=true",
    "build": "webpack --config webpack.production.js",
    "test": "jest --watch"
  },
  "keywords": [
    "chrome",
    "extension",
    "indieweb",
    "microformat",
    "webmention"
  ],
  "author": "Michael Beaton",
  "license": "MIT",
  "devDependencies": {
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.6.13",
    "@swc/jest": "^0.2.36",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.2",
    "chrome-types": "^0.1.167",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "jest": "~26.6",
    "jest-chrome": "^0.8.0",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "prettier": "^2.6.2",
    "react-svg-loader": "^3.0.3",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "style-loader": "^3.3.1",
    "@svgr/webpack": "^8.1.0",
    "swc-loader": "^0.2.6",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "web-ext": "^7.5.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "tabWidth": 4,
    "importOrderSeparation": false,
    "importOrderSortSpecifiers": true,
    "importOrder": [
      "^react.*",
      "<THIRD_PARTY_MODULES>",
      "^ts/",
      "^(./)[^.]+$",
      "^./.*.scss$"
    ]
  },
  "dependencies": {
    "microformats-parser": "^1.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
